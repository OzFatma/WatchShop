@model CheckOutViewModel
@{
    ViewData["Title"] = "Check Out";
}
<div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

<form asp-controller="Basket" asp-action="CheckOut" method="post">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                @foreach (var item in Model.Basket.Items)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.ProductName</h6>
                            <small class="text-muted">$@item.UnitPrice.ToString("n2")</small>
                        </div>
                        <span class="text-muted">$@item.TotalPrice.ToString("n2")</span>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$20</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Shipping address</h4>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Street">Street</label>
                    <input asp-for="Street" type="text" class="form-control" placeholder="1234 Main St" required>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="City">City</label>
                    <input asp-for="City" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5 mb-3">
                    <label asp-for="Country">Country</label>
                    <input type="text" class="form-control" asp-for="Country" placeholder="" required>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="State">State</label>
                    <input type="text" class="form-control" asp-for="State" placeholder="" required>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ZipCode">ZipCode</label>
                    <input type="text" class="form-control" asp-for="ZipCode" placeholder="" required>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>

            <hr class="mb-4">

            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CCOwner">Name on card</label>
                    <input type="text" class="form-control" asp-for="CCOwner" placeholder="" required>
                    <small class="text-muted">Fullname as displayed on card.</small>
                    <span asp-validation-for="CCOwner" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CCNumber">Credit card number</label>
                    <input type="text" class="form-control" asp-for="CCNumber" placeholder="" required>
                    <span asp-validation-for="CCNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="CCExpiration">Expiration</label>
                    <input type="text" class="form-control" asp-for="CCExpiration" placeholder="" required>
                    <span asp-validation-for="CCExpiration" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CCCvv">CVV</label>
                    <input type="text" class="form-control" asp-for="CCCvv" placeholder="" required>
                    <span asp-validation-for="CCCvv" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Pay Now !</button>
        </div>
    </div>
</form>


